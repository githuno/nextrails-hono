{
  "name": "@common/api-schema",
  "version": "0.1.0",
  "description": "API Schema",
  "types": "types/index.ts",
  "scripts": {
    "preview-docs": "redocly preview-docs src/index.yaml",
    "bundle": "redocly bundle src/index.yaml -o outputs/openapi.yaml",
    "build-docs": "redocly build-docs src/index.yaml -o outputs/index.html",
    "lint": "redocly lint src/index.yaml",
    "typecheck": "tsc --noEmit",
    "generate:type": "openapi-typescript outputs/openapi.yaml --output outputs/schema.ts",
    "build": "npm run bundle && npm run generate:type && npm run build-docs && npm run typecheck"
  },
  "dependencies": {
    "@redocly/cli": "^1.34.2",
    "openapi-typescript": "^7.6.1",
    "openapi-zod-client": "^1.18.3",
    "type-fest": "^4.40.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3"
  }
}
