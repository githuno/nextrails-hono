{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "types/**/*",
    "src/type-utils.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}